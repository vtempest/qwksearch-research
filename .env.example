# ==============================================
# QwkSearch Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values
# ==============================================

# -------------------- Database --------------------
# Turso database configuration (https://turso.tech)
TURSO_DATABASE_URL=file:./data/qwksearch.db
TURSO_AUTH_TOKEN=

# -------------------- Authentication --------------------
# Better-Auth secret key (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET=your-secret-key-here

# Google OAuth (https://console.cloud.google.com/apis/credentials)
# Required for Google Sign-In and Google One Tap
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Application Base URL (required for OAuth callbacks)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Optional OAuth Providers
AUTH_DISCORD_ID=
AUTH_DISCORD_SECRET=
AUTH_FACEBOOK_ID=
AUTH_FACEBOOK_SECRET=
AUTH_LINKEDIN_ID=
AUTH_LINKEDIN_SECRET=

# Email Authentication (Resend for magic links)
AUTH_RESEND_KEY=

# -------------------- AI Provider APIs --------------------
# OpenAI (https://platform.openai.com/api-keys)
OPENAI_API_KEY=

# Anthropic Claude (https://console.anthropic.com/settings/keys)
ANTHROPIC_API_KEY=

# Google AI (https://aistudio.google.com/app/apikey)
GOOGLE_API_KEY=

# Groq (https://console.groq.com/keys)
GROQ_API_KEY=

# Ollama (local LLMs - http://localhost:11434)
OLLAMA_API_URL=http://localhost:11434

# -------------------- Search & Data APIs --------------------
# Tavily Search API (https://tavily.com)
TAVILY_API_KEY=

# Financial Data APIs
FINPREP_API_KEY=
ALPHA_VANTAGE_API_KEY=

# -------------------- Search Engine --------------------
# SearxNG instance URL (optional - uses public instance if not set)
SEARXNG_API_URL=http://localhost:4000
